{
  "name": "starting-again",
  "private": true,
  "workspaces": [
    "apis/*",
    "packages/*",
    "webs/*"
  ],
  "scripts": {
    "start:docker": "docker-compose up --build --force-recreate -V",
    "stop:docker": "docker-compose down",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "kill:pm2": "pm2 delete ecosystem.config.js",
    "monitor:pm2": "pm2 monit"
  },
  "devDependencies": {
    "pm2": "5.2.2"
  }
}
